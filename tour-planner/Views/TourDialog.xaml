<Window x:Class="TourPlanner.Views.TourDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="TourDialog" Height="400" Width="320"
        Background="{StaticResource Background}"
        Foreground="{StaticResource FontColor}">
    <Window.DataContext>
        <local:TourDialogViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="0" Content="{Binding Path=DialogTitle}" />

        <Label Grid.Column="0" Grid.Row="1" Content="Name" VerticalContentAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="1" />

        <Label Grid.Column="0" Grid.Row="2" Content="From" VerticalContentAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="2" />

        <Label Grid.Column="0" Grid.Row="3" Content="To" VerticalContentAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="3" />

        <Label Grid.Column="0" Grid.Row="4" Content="Transport type" VerticalContentAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="4" />

        <Label Grid.Column="0" Grid.Row="5" Content="Description" VerticalContentAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="5" />

        <StackPanel Grid.Column="1" Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="💾 Save" />
            <Button Content="🗙 Cancel" Margin="10 0 0 0" />
        </StackPanel>
    </Grid>
</Window>
