<Window x:Class="TourPlanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Tour Planner" Width="1200" Height="800"
        Background="#eeeeee">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Margin="10,0,10,0" Content="Tours" FontFamily="Tahoma" FontSize="40px" Width="380" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <TextBox Text="{Binding Path=FilterText, UpdateSourceTrigger=PropertyChanged}" Height="40px" Margin="10,60,10,0" FontFamily="Tahoma" FontSize="30px" Width="380" VerticalAlignment="Top" HorizontalAlignment="Center" />

        <Button Content="+" Margin="10,110,0,0" Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="20" />
        <Button Content="-" Margin="10,110,10,0" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="20" />
        <Button Content="edit" Margin="10,110,60,0" Width="40" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="20" />

        <ListView x:Name="tours" HorizontalAlignment="Center" Margin="0,160,0,10" FontFamily="Tahoma" FontSize="18px" Width="380">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Distance" DisplayMemberBinding="{Binding Distance}" />
                    <GridViewColumn Header="Elevation" DisplayMemberBinding="{Binding Elevation}" />
                    <GridViewColumn Header="Difficulty" DisplayMemberBinding="{Binding Difficulty}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Image Grid.Column="1" Margin="0,0,800,0" />
    </Grid>
</Window>
