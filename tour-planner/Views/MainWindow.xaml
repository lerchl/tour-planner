<Window x:Class="TourPlanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        Title="Tour Planner" Width="1200" Height="800"
        Background="{StaticResource Background}"
        Foreground="{StaticResource FontColor}">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
            <Setter Property="FontSize" Value="20" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <StackPanel>
                            <Border Name="Border"
                                    Margin="5 0 -2 -10"
                                    Background="Transparent"
                                    BorderBrush="White" 
                                    BorderThickness="1,1,1,1" 
                                    CornerRadius="5" >
                                <Border.Effect>
                                    <DropShadowEffect />
                                </Border.Effect>
                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10 2 10 2"
                                        RecognizesAccessKey="True"/>
                            </Border>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="1000" />
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryActive}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource Primary}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" MaxWidth="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="0 50 50 0" Background="#2F2D8A">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <DockPanel Grid.Column="0">
                <Label DockPanel.Dock="Top" Content="Tours" Margin="10 10 10 0" FontFamily="Tahoma" FontSize="40px" Height="60" HorizontalAlignment="Left" />
                <Border DockPanel.Dock="Top" Margin="10 0 10 0" Padding="5" CornerRadius="10" Background="#111111">
                    <TextBox Text="{Binding Path=FilterText, UpdateSourceTrigger=PropertyChanged}" Height="30px" FontFamily="Tahoma" FontSize="20px" HorizontalAlignment="Stretch" />
                </Border>
                <Border DockPanel.Dock="Top" Margin="10" CornerRadius="10 10 45 10" Background="#111111">
                    <DataGrid SelectionChanged="DataGrid_SelectionChanged"
                        FontFamily="Tahoma" FontSize="20px" HeadersVisibility="None"
                        ItemsSource="{Binding Path=Tours}" AutoGenerateColumns="False"
                        CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False"
                        ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="{x:Null}"
                    >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Name}" IsReadOnly="True" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </DockPanel>
        </Border>

        <DockPanel Grid.Column="1">
            <DockPanel DockPanel.Dock="Top" Margin="25 25 25 0">
                <Button Content="➕" Width="50" Height="50" FontSize="25" ToolTip="Add Tour" Margin="0 0 20 0" Command="{Binding Path=AddTour}" />
                <Label DockPanel.Dock="Left" Content="{Binding SelectedTour.Name}" Height="50" FontSize="30px" FontFamily="Tahoma" />

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✏️" Width="50" Height="50" FontSize="25" ToolTip="Edit Tour" />
                    <Button Content="🗑️" Width="50" Height="50" FontSize="25" Margin="10 0 0 0" ToolTip="Delete Tour" />
                </StackPanel>
            </DockPanel>
            <TabControl Background="Transparent" Margin="25" BorderBrush="{x:Null}">
                <TabItem Header="Details">
                    <Border Background="#FF330A32" CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect />
                        </Border.Effect>
                        <StackPanel>
                            <Border Height="200" Margin="10 35 10 10" CornerRadius="10" Background="#111">
                                <Border.Effect>
                                    <DropShadowEffect />
                                </Border.Effect>
                                <Image Source="{Binding SelectedTour.ImageUrl}" />
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="200" MaxWidth="400" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition MinWidth="200" MaxWidth="600" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    
                                    <Label Grid.Column="0" Grid.Row="0" Padding="10" Content="From" VerticalContentAlignment="Center" />
                                    <Border Grid.Column="1" Grid.Row="0" Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <TextBlock Text="{Binding SelectedTour.From}" />
                                    </Border>

                                    <Label Grid.Column="0" Grid.Row="1" Padding="10" Content="To" VerticalContentAlignment="Center" />
                                    <Border Grid.Column="1" Grid.Row="1" Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <TextBlock Text="{Binding SelectedTour.To}" />
                                    </Border>

                                    <TextBlock Grid.Column="0" Grid.Row="2" Padding="10" Text="Transport type" VerticalAlignment="Center" TextWrapping="Wrap" />
                                    <Border Grid.Column="1" Grid.Row="2" Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <TextBlock Text="{Binding SelectedTour.TransportType}" />
                                    </Border>

                                    <Label Grid.Column="0" Grid.Row="3" Padding="10" Content="Distance" VerticalContentAlignment="Center" />
                                    <Border Grid.Column="1" Grid.Row="3" Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <TextBlock Text="{Binding SelectedTour.Distance}" />
                                    </Border>

                                    <TextBlock Grid.Column="0" Grid.Row="4" Padding="10" Text="Estimated time" VerticalAlignment="Center" TextWrapping="Wrap" />
                                    <Border Grid.Column="1" Grid.Row="4" Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <TextBlock Text="{Binding SelectedTour.EstimatedTime}" />
                                    </Border>
                                </Grid>
                                <StackPanel Grid.Column="1">
                                    <Label Content="Description" />
                                    <Border Margin="10" Padding="10" CornerRadius="10" Background="#111">
                                        <Border.Effect>
                                            <DropShadowEffect />
                                        </Border.Effect>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <TextBlock Text="{Binding SelectedTour.Description}" TextWrapping="Wrap" AllowDrop="True" TextAlignment="Justify" Height="310" /> <!-- TODO: Make height dynamic -->
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="Logs">
                    <Border Background="#FF3D132B" CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect />
                        </Border.Effect>
                        <Border DockPanel.Dock="Top" Margin="10 35 10 10" Padding="5" CornerRadius="10" Background="#111111">
                            <DataGrid
                                    FontFamily="Tahoma" FontSize="20px" HeadersVisibility="All"
                                    ItemsSource="{Binding Path=TourLogs}" AutoGenerateColumns="False"
                                    CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False"
                                    ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="{x:Null}"
                            >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Path=Date, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" IsReadOnly="True" Width="*" />
                                    <DataGridTextColumn Header="Time" Binding="{Binding Path=Time}" IsReadOnly="True" Width="*" />
                                    <DataGridTextColumn Header="Rating" Binding="{Binding Path=Rating}" IsReadOnly="True" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Border>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
