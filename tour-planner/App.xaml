<Application x:Class="TourPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TourPlanner"
             Startup="Application_Startup">
    <Application.Resources>
        <SolidColorBrush x:Key="Background" Color="#202020" />
        <SolidColorBrush x:Key="DataBackground" Color="#111111" />
        <SolidColorBrush x:Key="FontColor" Color="#eeeeee" />
        <SolidColorBrush x:Key="Primary" Color="#2F2D8A" />
        <SolidColorBrush x:Key="PrimaryActive" Color="#FF9361FF" />
        <FontFamily x:Key="FontFamily">Tahoma</FontFamily>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="{StaticResource Background}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="SelectionBrush" Value="{x:Null}" />

            <!--<Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Padding="5" CornerRadius="10" Background="{StaticResource DataBackground}" Margin="5">
                            <ContentPresenter Height="30" />
                        </Border>
                    </ControlTemplate>    
                </Setter.Value>
            </Setter>-->
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#eeeeee" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style TargetType="DataGridRowHeader">
            <Setter Property="Background" Value="#111111" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" CornerRadius="10" Background="{StaticResource Primary}" Padding="10">
                            <Border.Effect>
                                <DropShadowEffect />
                            </Border.Effect>
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryActive}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
